<script>
/* ----- DATA (fixed, from your illustrations) ----- */
const PLANS = {
  p1:{ monthly:2600, maturity:'₹15.33 lakh', natural:'₹10 lakh', accidental:'₹15 lakh', lifetime:'₹5 lakh' },
  p2:{ monthly:5000, maturity:'₹30.66 lakh', natural:'₹20 lakh', accidental:'₹30 lakh', lifetime:'₹10 lakh' },
  p3:{ monthly:12500, maturity:'₹76.65 lakh', natural:'₹50 lakh', accidental:'₹75 lakh', lifetime:'₹25 lakh' }
};
let currentPlan = 'p1';

/* ----- Helpers ----- */
const qs = s => document.querySelector(s);
const qsa = s => Array.from(document.querySelectorAll(s));
function applyPlan(){
  const p = PLANS[currentPlan];
  qs('#picked').textContent = `✅ Selected: ₹${p.monthly.toLocaleString()}/month`;
  qs('#maturityVal').textContent = p.maturity;
  qs('#naturalVal').textContent = p.natural;
  qs('#accidentVal').textContent = p.accidental;
  qs('#lifetimeVal').textContent = p.lifetime;
  const age = Number(qs('#ageSlider').value);
  qs('#dAge').textContent = age;
  qs('#simOut').innerHTML = `👪 If death at age ${age} → Family receives <strong>${p.lifetime}</strong>. No premium after 50.`;
}
function go(toSel){
  qsa('.step').forEach(s=>s.classList.remove('active'));
  qs(toSel).classList.add('active');
  window.scrollTo({top:0,behavior:'smooth'});
}

/* ----- Events ----- */
qsa('.seg button').forEach(btn=>{
  btn.addEventListener('click',()=>{
    qsa('.seg button').forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    currentPlan = btn.dataset.plan;
    applyPlan();
    go('#step1'); // reset to suspense start on plan change
  });
});
qsa('.next').forEach(n=>n.addEventListener('click',()=>go(n.dataset.next)));
qs('#restart').addEventListener('click',()=>go('#step1'));
qs('#ageSlider').addEventListener('input',applyPlan);

qs('#waBtn').addEventListener('click',()=>{
  const p = PLANS[currentPlan];
  const msg = encodeURIComponent(
`Hi! I want LIC Jeevan Anand (Zindagi ke saath bhi, Zindagi ke baad bhi):

• Monthly: ₹${p.monthly.toLocaleString()}
• Maturity @50: ${p.maturity}
• Death Cover (Policy Period): ${p.natural} (natural) / ${p.accidental} (accidental)
• Lifetime Cover after 50: ${p.lifetime} (till age 100)

Please share illustration & next steps.`
  );
  // Replace with your number (e.g., 919428391746)
  const phone = ''; // e.g. '919428391746'
  const url = phone ? `https://wa.me/${phone}?text=${msg}` : `https://wa.me/?text=${msg}`;
  window.open(url,'_blank');
});

/* init */
applyPlan();
</script>
</body>
